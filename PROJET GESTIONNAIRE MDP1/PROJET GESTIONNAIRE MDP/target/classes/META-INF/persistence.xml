<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="passmanPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.example.passman.model.Admin</class>
        <class>com.example.passman.model.Category</class>
        <class>com.example.passman.model.Credential</class>

        <properties>
            <!-- Connexion JDBC Standard -->
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/passman?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true"/>

            <!-- Vos identifiants pour WampServer -->
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value=""/>

            <!-- Dialecte -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

            <!-- ==================================================================== -->
            <!-- MODIFICATION LA PLUS IMPORTANTE : LA CONFIGURATION FINALE -->
            <!-- "validate" : Vérifie que les tables de la BDD correspondent aux classes Java. -->
            <!-- Ne modifie JAMAIS la base de données. C'est le mode le plus sûr. -->
            <!-- ==================================================================== -->
            <property name="hibernate.hbm2ddl.auto" value="validate"/>

            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>